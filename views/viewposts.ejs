<!DOCTYPE html>
<html>
    <head>
        <!-- Bootstrap for CSS only -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
            crossorigin="anonymous"
        />
        <!-- Bootstrap for JavaScript Bundle with Popper -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"
        ></script>
        <title><%=forumName%> - Posts</title>
        <link rel="stylesheet" type="text/css" href="main.css" />
    </head>
    <body>
        <!-- Navigation bar for the web app (uses bootstrap) -->
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/"
                ><h3 style="margin-left: 10px">Frutchan</h3></a
            >
            <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" href="/">Home</a>
                    <a class="nav-item nav-link" href="about">About</a>
                    <a class="nav-item nav-link active" href="viewposts">
                        Posts<span class="sr-only"></span>
                    </a>
                    <a class="nav-item nav-link" href="users">Users</a>
                    <a class="nav-item nav-link" href="topics">Topics</a>
                    <a class="nav-item nav-link" href="addpost"> Add Post </a>
                    <a class="nav-item nav-link" href="search"> Search </a>
                </div>
            </div>
        </nav>
        <br />

        <h1>Fruitnet Forums</h1>
        <h2>View posts</h2>
        <div class="table">
            <table class="table table-hover">
                <thead>
                    <tr>

                        <th>Date</th>
                        <th>Topic</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>User</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider"></tbody>
                    <% posts.forEach(function(post) { %>
                    <tr>
                        <td>
                            <%= post.post_date.toDateString() %> <%=
                            post.post_date.getHours() %>:<%= post.post_date.getMinutes()
                            %>
                        </td>
                        <td><%= post.topic_title %></td>
                        <td><%= post.post_title %></td>
                        <td><%= post.post_content %></td>
                        <td><%= post.username %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
